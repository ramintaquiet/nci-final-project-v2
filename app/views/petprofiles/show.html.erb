<h1>



<% if (user_signed_in? && (current_user.id == @petprofile.user_id)) %>
<%= link_to 'Edit', edit_petprofile_path(@petprofile), :class => "btn btn-secondary" %> 
<%= link_to 'Delete', @petprofile, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
<% end %>
&nbsp;
Pet <img src="/other/logintr.png" width="85" height="75" alt="">    &nbsp;
<% if user_signed_in? %>
<%= link_to favoritepet_text, favoritepet_update_path(petprofile: @petprofile), id:'favoritepet_link', remote: true,  :class => "btn btn-outline-danger"  %> 
<% end %>
 </h1>

<div class="container">
 <hr class="featurette-divider">

 <div class="row featurette">
   <div class="col-md-5">

   <div class="container3">
   <p>
     <strong>Name:</strong>
     <%= @petprofile.name %>
    
   
   
   <p>
     <strong>Category:</strong>
     <%= @petprofile.category.name %>
   
   
   <p>
     <strong>Gender:</strong>
     <%= @petprofile.gender.name %>
   
   
   <p>
     <strong>Breed:</strong>
     <%= @petprofile.breed %>
   
   
   <p>
     <strong>Date of Birth:</strong>
     <%= @petprofile.DOB %>
   
   
   <p>
     <strong>Pedigree:</strong>
     <%= @petprofile.pedigree?  ? 'yes' : 'no' %>
   
   
   <p>
     <strong>Vaccinated:</strong>
     <%= @petprofile.vaccinated?  ? 'yes' : 'no' %>
   
   
   <p>
     <strong>Microchipped:</strong>
     <%= @petprofile.microchipped?  ? 'yes' : 'no' %>
   
   
   <p>
     <strong>Available:</strong>
     <%= @petprofile.available?  ? 'yes' : 'no' %>
  
   
   
   <p>
   <strong>Owner:</strong>
     <%= @petprofile.user.name %>
   
     <p>
     <strong>Phone</strong>
       <%= @petprofile.user.phone %>
   

       <p>
       <strong>Town:</strong>
         <%= @petprofile.user.town %>
       
         <p>
         <strong>County</strong>
           <%= @petprofile.user.county %>
  
  
  </div>
  
   </div>
   <div class="col-md-5">

   
<% if @petprofile.image.attached? %>
  <div style="width:auto; height:500px">
    <%= link_to image_tag(@petprofile.image, style:"height:100%"), petprofiles_path %>
    <% else %>
    
  <div style="width:500px; height:auto">
  <%= link_to image_tag("/defimage3.png", style:"width:100%"), petprofiles_path %>
  <% end %>
    </div>
   
<br>
    <p>
    <strong>About:</strong>
  
    <%= @petprofile.about %>
    
 </div>
</div>
 <hr class="featurette-divider">

 










